<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    tools:context=".screens.activities.auth.OTPFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/mulish_700"
        android:text="@string/verify_number"
        android:textStyle="bold"
        android:textColor="@color/navy_blue"
        android:textSize="@dimen/_28sdp"
        app:layout_constraintStart_toStartOf="@id/back"
        app:layout_constraintTop_toBottomOf="@id/back" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/dm_sans_regular"
        android:text="@string/enter_otp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@id/title1"
        app:layout_constraintTop_toBottomOf="@id/title1" />

    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/dm_sans_regular"
        android:textColor="@color/accent_blue"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/title2"
        app:layout_constraintTop_toBottomOf="@id/title2" />

    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:fontFamily="@font/dm_sans_400"
        android:text="@string/change"
        android:textColor="@color/green"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="@id/phoneNumber"
        app:layout_constraintStart_toEndOf="@id/phoneNumber"
        app:layout_constraintTop_toTopOf="@id/phoneNumber" />

    <LinearLayout
        android:id="@+id/otpLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:orientation="horizontal"
        android:weightSum="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneNumber">

        <EditText
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/ic_square"
            android:fontFamily="@font/dm_sans_400"
            android:gravity="center"
            android:hint="@string/dash"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/navy_blue" />

        <EditText
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/ic_square"
            android:fontFamily="@font/dm_sans_400"
            android:gravity="center"
            android:hint="@string/dash"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/navy_blue" />

        <EditText
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/ic_square"
            android:fontFamily="@font/dm_sans_400"
            android:gravity="center"
            android:hint="@string/dash"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/navy_blue" />

        <EditText
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/ic_square"
            android:fontFamily="@font/dm_sans_400"
            android:gravity="center"
            android:hint="@string/dash"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/navy_blue" />

        <EditText
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/ic_square"
            android:fontFamily="@font/dm_sans_400"
            android:gravity="center"
            android:hint="@string/dash"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/navy_blue" />

        <EditText
            android:id="@+id/tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_3sdp"
            android:layout_weight="1"
            android:background="@drawable/ic_square"
            android:fontFamily="@font/dm_sans_400"
            android:gravity="center"
            android:hint="@string/dash"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="@color/navy_blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/wrongOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/dm_sans_400"
        android:text="@string/wrong_otp"
        android:textColor="@color/red"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/otpLL"
        app:layout_constraintTop_toBottomOf="@id/otpLL" />

    <TextView
        android:id="@+id/resendCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_30sdp"
        android:fontFamily="@font/dm_sans_400"
        android:text="@string/resend_code_in"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>