<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyDay" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/bg_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bg_white</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/bg_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_white</item>
        <!--    <item name="windowNoTitle">true</item>
            <item name="windowActionBar">false</item>
            <item name="android:windowFullscreen">true</item>
            <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultDayNightTheme.EasyDay" parent="Theme.EasyDay">
        <item name="colorPrimary">@color/bg_white</item>
        <item name="colorPrimaryVariant">@color/bg_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_white</item>
        <!-- Make Status bar ic_launcher_round dark. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="FullScreenTheme.EasyDay" parent="DefaultDayNightTheme.EasyDay">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:fontFamily">@font/dm_sans_400</item>
    </style>

    <style name="BottomNavigationViewActive">
        <item name="fontFamily">@font/dm_sans_700</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/dm_sans_regular</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/mulish_700</item>
    </style>
    <style name="MySearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">@string/search</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/dm_sans_400</item>
    </style>

    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:fontFamily">@font/dm_sans_400</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogPosButtonTheme</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogNegButtonTheme</item>
    </style>

    <style name="DialogNegButtonTheme" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="background">@null</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DialogPosButtonTheme" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="background">@null</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="android:textColorPrimary">@color/accent_blue</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/hint_color</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="fontFamily">@font/dm_sans_700</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/accent_blue</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>
</resources>